container_commands:
  01_copy_nginx_config:
    command: |
      mkdir -p /etc/nginx/sites-available/
      cat > /etc/nginx/sites-available/default << 'EOF'
server {
    listen 80;
    listen [::]:80;
    server_name _;

    # Set correct document root for Elastic Beanstalk
    root /var/app/current/public;
    index index.php;

    # Enable gzip
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_proxied expired no-cache no-store private must-revalidate auth;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/json application/xml+rss application/atom+xml image/svg+xml;

    location = /favicon.ico { access_log off; log_not_found off; }
    location = /robots.txt  { access_log off; log_not_found off; }

    # Handle static assets
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|woff|woff2|ttf|eot|svg)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        try_files $uri @rewriteapp;
    }

    location / {
        try_files $uri $uri/ @rewriteapp;
    }

    location @rewriteapp {
        fastcgi_pass 127.0.0.1:9000;
        fastcgi_split_path_info ^(.+.php)(/.*)$;
        fastcgi_read_timeout 300;
        fastcgi_connect_timeout 75;
        fastcgi_send_timeout 300;
        include fastcgi.conf;
        fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
        fastcgi_param DOCUMENT_ROOT $realpath_root;

        fastcgi_param APP_NAME "Laravel";
        fastcgi_param APP_ENV production;
        fastcgi_param QUERY_STRING $query_string;

        fastcgi_index index.php;
        fastcgi_keep_conn on;
    }
}
EOF

      # Create symbolic link to enable the site
      ln -sf /etc/nginx/sites-available/default /etc/nginx/sites-enabled/

      # Test nginx config
      nginx -t

  02_restart_nginx:
    command: |
      sudo systemctl restart nginx
